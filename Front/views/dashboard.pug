extends base

block content
  section.dashboard
    h1 Welcome to Your Dashboard!

    form#preferenceForm(action="/preference/save" method="post")
      div.form-group
        label(for="category") Select a Category:
        select#category(name="category" required)
          option(value="business") Business
          option(value="crime") Crime
          option(value="domestic") Domestic
          option(value="education") Education
          option(value="entertainment") Entertainment
          option(value="environment") Environment
          option(value="food") Food
          option(value="health") Health
          option(value="lifestyle") Lifestyle
          option(value="other") Other
          option(value="politics") Politics
          option(value="science") Science
          option(value="sports") Sports
          option(value="technology") Technology
          option(value="top") Top
          option(value="tourism") Tourism
          option(value="world") World

      div.form-group
        label(for="customInput") Enter Additional Preferences:
        input#customInput(type="text" name="customInput" placeholder="Enter text..." required)

      div.button-group
        button(type="submit" class="btn btn-primary") Save Preferences
    div#feedback.modal.hidden

